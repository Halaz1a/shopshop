{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Modifier un produit {% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
        <div class="col-12 col-md-6 align-items-center">
            <h1 class="text-center text-primary fw-bold m-2">Modifier un produit</h1>
            <form method="POST">
            <input type="hidden" value="{{product.id}}" name="id" class="form-control">
            <input type="text" value="{{product.name}}" name="name" class="form-control">
            <input type="text" value="{{product.description}}" name="description" class="form-control">
            <input type="text" value="{{product.price}}" name="price" class="form-control">
            <input type="text" value="{{product.stock}}" name="stock" class="form-control">
            <select class="form-control" name="type">
            {% for t in types %}
                <option value="{{t.id}}">{{t.label}}</option>
            {% endfor %}
            </select>
            <div class="text-center">
            <input type="submit" value="Modifier" class="btn btn primarym-2">
            </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}