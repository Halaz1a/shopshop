{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Liste des produits {% endblock %}
       
{% block content %} 
    <div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-10">
				<h1 class="text-center">{{type.label}}</h1> 

				

					{% for product in products %}
					<div class="card">
						<img src="images/{{product.image}}" class="card-img-top" >
						<div class="card-body">
							<h5 class="card-title">{{product.name}}</h5>
							<p class="card-text">{{product.description}}</p>
							{% if product.stock > 3 %}
								<p class="card-text"><small class="text-body-secondary">{{product.price}}€. Encore {{product.stock}} en stock !</small></p>
							{% else %}
								<p class="card-text"><small class="text-body-secondary">{{product.price}}€. <h3>Il n'en reste que {{product.stock}} en stock !</h3></small></p>
							{% endif %}
						</div>
					</div>
					{% endfor %}



			</div>
		</div>
	</div>
{% endblock %} 