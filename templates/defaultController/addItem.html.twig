{% extends "base.html.twig" %}

{% block title %}{{ parent() }} Ajouter un item dans un panier{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 align-items-center">
                <h1 class="text-center text-primary fw-bold m-2">Ajouter un item dans un panier</h1>

                <form action="" method="post">
                    <input type="text" name="status" class="form-control" placeholder="statut" required>

                    <select name="id_Cart" class="form-control" required>
                    {% for cart in carts %}
                        <option value="{{cart.id_Cart}}">{{cart.user.lastName}} {{user.firstName}}</option>
                    {% endfor %}

                    </select>
                    <div class="text-center">
                        <input type="submit" value="Ajouter" class="btn btn-primary m-2">
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}