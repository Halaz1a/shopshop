{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Ajouter un avis {% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 align-items-center">
                <h1 class="text-center text-primary fw-bold m-2">Ajouter un avis pour le produit {{product.name}}</h1>

                <form method="post">
                    <input type="hidden" id="id" name="id" class="form-control" required>
                    <input type="text" id="stars" name="stars" class="form-control" placeholder="Note entre 1 et 5" required>
                    <input type="text" id="comment" name="comment" class="form-control" placeholder="Commentaire" required>
                    <div class="text-center">
                        <input type="submit" value="Valider" class="btn btn-primary m-2">
                    </div>
                </form>
                
            </div>
        </div>
    </div>
{% endblock %}