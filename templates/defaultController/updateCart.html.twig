{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Modifier un panier {% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
        <div class="col-12 col-md-6 align-items-center">
            <h1 class="text-center text-primary fw-bold m-2">Modifier un panier</h1>
            <form method="POST">
            <input type="hidden" value="{{cart.id_Cart}}" name="id_Cart" class="form-control">
            <input type="text" value="{{cart.creationDate | date("Y-m-d")}}" name="creationDate" class="form-control">
            <input type="text" value="{{cart.status}}" name="status" class="form-control">
            <select class="form-control" name="id">
            {% for user in users %}
                <option value="{{user.idUser}}">{{user.email}} {{user.lastName}} {{user.firstName}}</option>
            {% endfor %}
            </select>
            <div class="text-center">
            <input type="submit" value="Modifier" class="btn btn primarym-2">
            </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}