{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Modifier un user {% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
        <div class="col-12 col-md-6 align-items-center">
            <h1 class="text-center text-primary fw-bold m-2">Modifier un user</h1>
            <form method="POST">
            <input type="hidden" value="{{user.idUser}}" name="id" class="form-control">
            <input type="text" value="{{user.email}}" name="email" class="form-control">
            <input type="text" value="{{user.lastName}}" name="lastName" class="form-control">
            <input type="text" value="{{user.firstName}}" name="firstName" class="form-control">
            <input type="text" value="{{user.password}}" name="password" class="form-control">
            <input type="text" value="{{user.address}}" name="address" class="form-control">
            <input type="text" value="{{user.postalCode}}" name="postalCode" class="form-control">
            <input type="text" value="{{user.city}}" name="city" class="form-control">
            <input type="text" value="{{user.phone}}" name="phone" class="form-control">
            <div class="text-center">
            <input type="submit" value="Modifier" class="btn btn primarym-2">
            </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}