{% extends "base.html.twig" %}

{% block title %}{{ parent() }} Ajouter ce produit dans mon panier{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 align-items-center">
                <h1 class="text-center text-primary fw-bold m-2">Ajouter ce produit dans mon panier</h1><br>

                <form action="" method="post">
                    <h3>{{product.id}} {{product.name}}</h3>
                    {{product.description}}<br>
                    Prix à l'unité : {{product.price}}
                    <input type="text" name="quantity" class="form-control" placeholder="quantité" required>
                    <div class="text-center">
                        <input type="submit" value="Ajouter" class="btn btn-primary m-2">
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}